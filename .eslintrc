{"extends": [
		"react-app",
		"react-app/jest"
	],
		"rules": {
		"no-console": "warn",
		"prefer-const": "error",
		"quotes": ["error", "double"],
		"jsx-quotes": ["error", "prefer-double"],
		"indent": ["warn", 2],
		"max-len": ["error", { "code": 120 }],
		"semi": ["warn", "always"],
		"import/order": ["error", {
		"groups": ["builtin", "external", "internal","parent", 
		"sibling", "index", "object", "type"],
		"newlines-between": "always-and-inside-groups"
		}],
		"@typescript-eslint/explicit-module-boundary-types": "off"
		//"react/prop-types": "off" - вимкнення правила для перевірки наявності PropTypes у компонентах React. У проекті використовується TypeScript, який надає більш ефективний спосіб перевірки типів пропсів.
	}
}